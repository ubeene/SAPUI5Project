<mvc:View controllerName="sync.c14.test.ui.table.controller.View1"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core" 
>
    <Page id="page" title="{i18n>title}">
        <content>

            <t:Table
                id="idCarrierTable"
                rows="{/CarrierSet}"
                selectionMode="MultiToggle"
                selectionBehavior="Row"
                visibleRowCount="6"
                title="ui table의 제목"
            >
                <t:columns>
                    <!-- 항공사 -->
                    <t:Column>
                        <!-- 제목   -->
                        <Label text="{i18n>Carrid}" />
                        <!-- 데이터 -->
                        <t:template>
                            <ObjectIdentifier title="{Carrid}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{i18n>Carrname}" />
                        <t:template>
                            <Text text="{Carrname}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{i18n>Currcode}" />

                        <t:template>
                            <!-- value 는 선택된 값 items 는 선택할 수 있는 후보 리스트 -->
                            <ComboBox value="{Currcode}" items="{/}">
                                <items>
                                    <core:Item text="{}" />
                                </items>
                            </ComboBox>
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{i18n>Url}" />

                        <t:template>
                            <Link text="Go To Website" href="{Url}" target="_blank" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{i18n>Erdat}" />
                        <t:template>
                            <DatePicker
                                value="{ 
                                path: 'Erdat', 
                                type: 'sap.ui.model.odata.type.Date', 
                                formatOptions: {
                                    pattern: 'yyyy-MM-dd'
                                }}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{i18n>Erzet}" />
                        <t:template>
                            <TimePicker
                                value="{
                                path: 'Erzet',
                                type: 'sap.ui.model.odata.type.Time',
                                formatOptions: {
                                    pattern: 'HH:mm:ss'
                                }
                            }" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{i18n>Ernam}" />
                        <t:template>
                            <Text text="{Ernam}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{i18n>Aedat}" />
                        <t:template>
                            <DatePicker
                                value="{ 
                                path: 'Aedat', 
                                type: 'sap.ui.model.odata.type.Date', 
                                formatOptions: {
                                    pattern: 'yyyy-MM-dd'
                                }}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{i18n>Aezet}" />
                        <t:template>
                            <TimePicker
                                value="{
                                path: 'Aezet',
                                type: 'sap.ui.model.odata.type.Time',
                                formatOptions: {
                                    pattern: 'HH:mm:ss'
                                }
                            }" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="{i18n>Aenam}" />
                        <t:template>
                            <Text text="{Aenam}" />
                        </t:template>
                    </t:Column>
                </t:columns>
               <!-- <t:rows>

                </t:rows> -->
            </t:Table>
        </content>
    </Page>
</mvc:View>